<h1>Hello from {{shop_name}}</h1>

<p>
  <b>Order name</b>:      {{order_name}}<br/>
  <b>Order name</b>:      {{name}} (different variable, same content)<br/>

  <b>Order Number</b>:    {{order_number}}
</p>

<b>Gateway used</b>:    {{ gateway }}</br>
<b>Shipping method</b>: {{ shipping_method.title }}

<table>
  <tr>
    <td>Subtotal price</td><td>{{ subtotal_price | money }}</td>
  </tr>
  <tr>
    <td>Tax Price</td><td>{{ tax_price | money }}</td>
  </tr>
  <tr>
    <td>Shipping price</td><td>{{ shipping_price | money }}</td>
  </tr>
  <tr>
    <td style="border-top: 2px solid black">Total price:</td><td style="border-top: 2px solid black">{{ total_price | money }}</td>
  </tr>
</table>

<div style="border: 1px solid #999">
  <b>Note</b>:       {{ note }}<br/>
  <b>Attributes</b>: {{ attributes }}
</div>

<p>Customer name and email: <b>{{ customer.name }}</b> - <u>{{ customer.email }}</u></p>
Customer Email: {{ email }} (different variable, same content)


<h3>Shipping Address</h3>
  {{ shipping_address.name }}<br/>
  {{ shipping_address.street }}<br/>
  {{ shipping_address.city }}, {{ shipping_address.province }}  {{ shipping_address.zip }}<br/>
  {{ shipping_address.country }}<br/>
  {{ shipping_address.phone }}<br/>


<h3>Billing Address</h3>
{{ billing_address.last_name }}, {{ billing_address.first_name }}<br/>
{{ billing_address.street }}<br/>
{{ billing_address.city }}, {{ billing_address.province }}  {{ billing_address.zip }}<br/>
{{ billing_address.country }}<br/>
{{ billing_address.phone }}<br/>


<h3>Line Items</h3>
{% for line_item in line_items %}
  <p>{{ line_item.quantity }} x {{ line_item.title }}		(SKU: {{ line_item.sku }})</p>

  <ul>
    <li>ID:         {{ line_item.id }}</li>
    <li>VARIANT:    {{ line_item.variant }}</li>
    <li>PRODUCT:    {{ line_item.product }}</li>
    <li>PRICE:      {{ line_item.price }}</li>
    <li>LINE PRICE: {{ line_item.line_price }}</li>
    <li>TAX:        {{ line_item.tax }}</li>
    <li>GRAMS:      {{ line_item.grams }}</li>
    <li>VENDOR:     {{ line_item.vendor }}</li>
  </ul>
{% endfor %}


<h4>Fulfilled line items</h4>
{% for line in fulfilled_line_items %}
  {{ line.quantity }} x {{line.title }}		(sku: {{ line.sku }})
{% endfor %}


<h4>Unfulfilled line items</h4>
{% for line in unfulfilled_line_items %}
  {{ line.quantity }} x {{line.title }}		(sku: {{ line.sku }})
{% endfor %}