<div id="inline-preview-<%= tmpl.id %>">
  
  <!-- new preview -->
  <div class="preview-top" >
    <div class="template-actions">
     <img src="/images/button-clip.png" width="68" height="42" alt="Button Clip" class="aesthetic-clip" />
      <p class="template-name"><strong><em><%= tmpl.name %> &nbsp;</em></strong></p>
    </div>
  </div>
  <div class="preview-wrapper">
    <div class="preview-content">
      <% if safe %>
        <%= sanitize(rendered_template) %>
      <% else %>
        <%= rendered_template %>
      <% end %>
    </div>
  </div> <!-- preview-wrapper -->

  <div class="preview-bottom"></div>
</div>