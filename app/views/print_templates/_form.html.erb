<% form_remote_for(tmpl, :method => method, :html => {:id => "print_template_form"}, :loading => "Status.loading()") do |f| %>
  <div class="header">
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
  </div>

  <p><%= f.text_area :body %></p>

  <div class="button-panel">
    <p class="buttons">
      <%= submit_tag(method == 'post' ? "Create" : "Update" )%>
      or
      <%= link_to_function "Cancel", "Dialog.close()", :class => 'action' %>      
    </p>
  </div>
<% end %>

<% if method == 'post' %>
  <% content_for :javascript do %>
    $(":text:visible:enabled:first").focus().select();
  <% end %>
<% end %>